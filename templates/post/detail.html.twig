{% extends 'base.html.twig' %}

{% block title %}{{ figure.name }}{% endblock %}

{% block body %}
    <h1>{{ figure.name }}</h1>
    <p>{{ figure.description }}</p>

    <h2>Groupe : {{ figure.group }}</h2>

    <h2>Photos :</h2>
    <ul>
        {% for photo in figure.photos %}
            <li><img src="{{ photo.url }}" alt="{{ photo.alt }}" /></li>
        {% endfor %}
    </ul>

    <h2>Vidéos :</h2>
    <ul>
        {% for video in figure.videos %}
            <li><iframe src="{{ video.url }}" frameborder="0" allowfullscreen></iframe></li>
        {% endfor %}
    </ul>

    <h2>Espace de discussion :</h2>
    <!-- Ajoutez ici l'espace de discussion ou des commentaires liés à la figure si nécessaire -->
{% endblock %}
