{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié
{% endblock %}

{% block body %}
	<h1>Mot de passe oublié</h1>

	<p>Entrez votre adresse email pour réinitialiser votre mot de passe.</p>
	{% set successFlash = app.flashes('success') %}
	{% set errorFlash = app.flashes('error') %}

	{% if successFlash is not empty %}
		<div class="alert alert-success">
			{{ successFlash[0] }}
		</div>
	{% endif %}

	{% if errorFlash is not empty %}
		<div class="alert alert-danger">
			{{ errorFlash[0] }}
		</div>
	{% endif %}


	<form method="post">
		<div class="form-group">
			<label for="email">Email</label>
			<input type="email" id="email" name="email" class="form-control" required>
		</div>

		<button type="submit" class="btn btn-primary">Envoyer l'email de réinitialisation</button>
	</form>

	<p>Retour à
		<a href="{{ path('app_login') }}">la page de connexion</a>.</p>
{% endblock %}
