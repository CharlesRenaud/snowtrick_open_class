{% extends 'base.html.twig' %}

{% block title %}
  Forogot passsword
{% endblock %}

{% block body %}
  <div class="form-container">
    <img class="bg-site-form" src="{{ asset('images/bg-site-snow.jpg') }}" alt="background snowboard trick" />

    <form class="forgot-form" method="post">
      <h1>Forogot password</h1>
      {% set successFlash = app.flashes('success') %}
      {% set errorFlash = app.flashes('error') %}

      {% if successFlash is not empty %}
        <div class="alert alert-success">{{ successFlash[0] }}</div>
      {% endif %}

      {% if errorFlash is not empty %}
        <div class="alert alert-danger">{{ errorFlash[0] }}</div>
      {% endif %}

      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" class="form-control" required />
      </div>

      <button type="submit" class="btn btn-primary">send email</button>

      <a href="{{ path('app_login') }}">back to login</a>
    </form>
  </div>
{% endblock %}
