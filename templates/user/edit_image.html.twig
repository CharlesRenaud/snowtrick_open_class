{% extends 'base.html.twig' %}

{% block body %}
    <h1>Edit User Image</h1>

    {{ form_start(form) }}
    {{ form_widget(form) }}

    <button type="submit" class="btn btn-primary">Save</button>
    {{ form_end(form) }}

    {% if form_errors(form) %}
        <div class="alert alert-danger">
            {{ form_errors(form) }}
        </div>
    {% endif %}
{% endblock %}
