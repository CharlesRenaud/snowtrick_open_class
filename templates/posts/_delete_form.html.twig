<form class="delete-form" method="post" action="{{ path('app_posts_delete', {'id': post.id}) }}" onsubmit="return confirm('Are you sure you want to delete this post?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
	<button class="delete-btn">
		<img class="icon-crud" src="/images/bin-icon.png"/>
	</button>
</form>
